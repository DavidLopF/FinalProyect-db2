{{#if supplier}}
<div class="modal is-active  rounded">
    <div class="modal-background"></div>
    <div class="modal-card animate__animated animate__slideInUp">
        <header class="modal-card-head">
            <p class="modal-card-title">Bienvenido {{user.full_name}}</p>
            <button class="delete" aria-label="close"></button>
        </header>
        <section class="modal-card-body">
            <p>You are a supplier, u can public your products</p>
        </section>
        <button class="modal-close is-large" id="close" aria-label="close"></button>
    </div>
</div>
{{/if}}

{{#if buyer}}
<div class="modal is-active  rounded x">
    <div class="modal-background"></div>
    <div class="modal-card animate__animated animate__slideInUp">
        <header class="modal-card-head">
            <p class="modal-card-title">Bienvenido {{user.full_name}}</p>
            <button class="delete" aria-label="close"></button>
        </header>
        <section class="modal-card-body">
            <p>Como tu rol es {{type}} ahora puedes comprar productos </p>
        </section>
        <button class="modal-close is-large" id="close" aria-label="close"></button>
    </div>
</div>

{{/if}}
<script>
    const button = document.getElementById('abrir-modal');
    const close = document.getElementById('close');

    close.addEventListener('click', () => {
        document.querySelector('.modal').classList.remove('is-active');
    });
    localStorage.setItem('token', '{{token}}');
    localStorage.setItem('user', '{{user.full_name}}');

</script>